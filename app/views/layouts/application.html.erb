<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title><%= content_for?(:title) ? yield(:title) : "Bridge City Automotive" %></title>
    
    <meta name="description" content="">
    <meta name="author" content="">
    
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <section class="wrap">
      <header class="navbar navbar-fixed-top">
        <nav class="navbar-inner">
          <div class="container">
            <%= render 'layouts/navigation' %>
          </div>
        </nav>
      </header>
      <div id="main" role="main" class="main">
        <div class="container">
          <div class="content">
             <div class="row">
              <div class="span12">
                <%= render 'layouts/messages' %>
                <div id="main_page"><%= yield %></div>
              </div>
            </div>
            <footer>
            </footer>
          </div>
        </div> <!--! end of .container -->
      </div> <!--! end of #main -->
      <div class="push"></div>
    </section>
    <footer class="footer">
      <div class="container">
        <div class="row">
          <p class="muted credit span12 text-right" style="padding: 10px 0">
            &copy; 2013 Bridge City Autobrokers, Inc. · PO Box 68484 · Portland, OR 97268
          </p>
        </div>
      </div>
    </footer>
    <script type="text/javascript">
      BridgeCity.uuids = <%= load_uuids.to_s.html_safe %>;
      BridgeCity.styles = <%= Automobile.styles.to_s.html_safe %>;
      BridgeCity.statuses = <%= Automobile.statuses.to_s.html_safe %>;
    </script>
  </body>
</html>