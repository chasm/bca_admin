<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    
    <title>Bridge City Automotive</title>
    
    <%= stylesheet_link_tag "application", :media => "all" %>
  </head>
  <body>
    <%= yield %>
    
    <%= javascript_include_tag "application" %>
    
    <%= javascript_include_tag "backbone/app" %>
    
    <script type="text/javascript">
      $(function() {
        BridgeCity.uuids = <%= load_uuids.to_s.html_safe %>;
        BridgeCity.styles = <%= Automobile.styles.to_s.html_safe %>;
        BridgeCity.statuses = <%= Automobile.statuses.to_s.html_safe %>;
      });
    </script>
  </body>
</html>