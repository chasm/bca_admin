<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <script type="text/javascript">
      $(function() {
        noty({
          type: '<%= name == :notice ? "success" : "alert" %>',
          text: '<%= msg %>',
          timeout: <%= name == :notice ? 4000 : 30000 %>
        });
      });
    </script>
  <% end %>
<% end %>
